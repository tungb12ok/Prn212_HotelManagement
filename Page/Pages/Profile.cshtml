@page
@using DataAccess.Models
@model Page.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2>My Profile</h2>
@if (TempData["Message"] != null)
{
    <h3 class="bg-success text-white">@TempData["Message"]</h3>
}
<form method="post">
    <input type="text" asp-for="Customer.CustomerId" hidden=""/>
    <div class="form-group">
        <label asp-for="Customer.CustomerFullName">Full Name</label>
        <input asp-for="Customer.CustomerFullName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Telephone">Telephone</label>
        <input asp-for="Customer.Telephone" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Customer.EmailAddress">Email</label>
        <input asp-for="Customer.EmailAddress" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" asp-for="Customer.Password" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Customer.CustomerBirthday">Birthday</label>
        <input type="date" asp-for="Customer.CustomerBirthday" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>