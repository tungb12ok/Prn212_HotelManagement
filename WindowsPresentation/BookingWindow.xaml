<Window x:Class="WindowsPresentation.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowsPresentation"
        mc:Ignorable="d"
        Title="Booking" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Customer:"/>
            <TextBox Name="tbCustomer" Margin="5"/>

            <Label Content="Room:"/>
            <ComboBox x:Name="cbRoom" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomID" Margin="5"/>

            <Label Content="Start Date:"/>
            <DatePicker x:Name="StartDatePicker" Margin="5"/>

            <Label Content="End Date:"/>
            <DatePicker x:Name="EndDatePicker" Margin="5"/>

            <Button Content="Book" Click="BookButton_Click" Margin="5" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
