<Window x:Class="WindowsPresentation.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowsPresentation"
        mc:Ignorable="d"
        Title="Report" Height="800" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
                <Label Content="Start Date:" Margin="5"/>
                <DatePicker x:Name="StartDatePicker" Margin="5"/>
                <Label Content="End Date:" Margin="5"/>
                <DatePicker x:Name="EndDatePicker" Margin="5"/>
                <Button Content="Generate Report" Click="GenerateReport_Click" Margin="5"/>
            </StackPanel>

            <DataGrid x:Name="ReportDataGrid" AutoGenerateColumns="True" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
