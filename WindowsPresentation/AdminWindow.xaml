<Window x:Class="WindowsPresentation.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowsPresentation"
        mc:Ignorable="d"
        Title="Admin Window" Height="350" Width="525">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="30">Hotel Management System</Label>
            <Button Content="Manage Customers" Click="ManageCustomers_Click" Margin="10"/>
            <Button Content="Manage Rooms" Click="ManageRooms_Click" Margin="10"/>
            <Button Content="Create Report" Click="CreateReport_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
